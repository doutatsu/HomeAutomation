 require 'pi_piper'
 include PiPiper

module PinWatcher
  class Sensor
    def initialize
      @@sensorStatus = false
      pinJob
    end

    def status
      if @@sensorStatus == true
        return 'online'
      else
        return 'offline'
      end
    end

    def pinJob
        watch :pin => 17, :goes => :high do
          @@sensorStatus = true
        end
    end
  end
end
